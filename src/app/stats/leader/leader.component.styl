.leader
  margin-bottom 4rem

  .headshot-logo
    position relative
    height 12rem
    width 12rem
    margin 0 auto 2rem

    .player-headshot
      position relative
      width 12rem
      border-radius 50%
      border 1px solid #cccccc

    .team-logo
      position absolute
      bottom 0
      right -3rem
      width 8rem

  .number
    padding-right 1rem
    font-size 2.5rem
    text-align right

  .name
    border-left 1px solid #cccccc
    padding-left 1rem

    .first
      display block
      line-height 1

    .last
      display block
      font-size 2rem
      text-transform uppercase
      line-height 1

  .team-position
    margin 1.5rem 0
    text-align center

  .stats
    text-align center

    .title
      text-transform uppercase
      font-weight 500
      line-height 1

    .stat
      font-weight 500
      font-size 5rem
      line-height 1

.no-gutter
  padding-left 0
  padding-right 0